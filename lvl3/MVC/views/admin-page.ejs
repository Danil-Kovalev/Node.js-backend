<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">

    <title>Admin page</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="module" src="./admin-page_files/indexAdmin.js"></script>
</head>

<body class="p-3 m-0 border-0 bd-example m-0 border-0">

    <nav class="navbar bg-body-tertiary" style="background-color: #ffffff;">
        <div class="container-fluid">
            <p><a href="http://localhost:3000/admin"
                    class="link-success link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"
                    style="text-decoration: none !important;">Бібліотека Ш++</a></p>

            <form class="d-flex" role="navigation">
                <button class="btn btn-outline-success" type="button" id="logout-btn">Вихід</button>
            </form>
        </div>
    </nav>

    <div class="position-absolute start-10 top-10 w-25">
        <table class="table table-hover align-middle">
            <caption>Список книжок</caption>
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Назва</th>
                    <th scope="col">Автори</th>
                    <th scope="col">Рік</th>
                    <th scope="col">Дія</th>
                    <th scope="col">Кліків</th>
                </tr>
            </thead>
            <%- include('./partials/adminBooks.ejs') %>
                <tbody class="table-group-divider" id="table-content"></tbody>
        </table>

        <%- include('./partials/adminBooks.ejs') %>
            <ul class="pagination position-relative top-50 start-50 translate-middle-y" id="pagination-content"></ul>
    </div>

    <div class="field-add-books hstack gap-3 position-absolute start-50 top-10 end-0">
        <div class="main-info-book vstack gap-3">
            <div class="mb-3">
                <input type="text" class="form-control" id="book-name" placeholder="Назва книги*">
            </div>
            <div class="mb-3">
                <input type="number" class="form-control" id="year-publication" placeholder="Рік видання*">
            </div>
            <div class="mb-3">
                <input type="number" class="form-control" id="book-pages" placeholder="Кількість сторінок*">
            </div>
            <div class="mb-3">
                <input class="form-control" type="file" id="form-img" name="new-img">
            </div>
            <div class="card mb-3" style="max-width: 110px; height: 150px;">
                <div class="row g-0">
                    <img src="" alt="..." id="field-img" style="width: 110px; height: 150px;">
                </div>
            </div>

            <button type="button" class="btn btn-outline-success w-50" id="add-btn">Додати</button>
        </div>

        <div class="additional-info vstack gap-3">
            <div class="mb-3">
                <input type="text" class="form-control" id="first-author" placeholder="Перший автор*">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="second-author" placeholder="Другий автор">
            </div>
            <div class="mb-3">
                <input type="text" class="form-control" id="third-author" placeholder="Третій автор">
            </div>
            <div class="mb-3">
                <textarea class="form-control" id="description-book" rows="3" placeholder="Опис книги*"></textarea>
            </div>
        </div>
    </div>

</body>

</html>